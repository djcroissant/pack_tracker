<h1><%= "Expedition: #{@expedition.title}" %></h1>
<h1><%= "#{@expedition.days} days" %></h1>
<h2>Packing List:</h2>

<table class="table table-hover table-bordered table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |inventory_item| %>
      <tr>
        <td><%= inventory_item.title %></td>
        <td><%= inventory_item.description %></td>
        <td><%= inventory_item.weight %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to  "Add/Remove Items", packer_allocate_path(exp_id: @expedition.id), method: :get %>
