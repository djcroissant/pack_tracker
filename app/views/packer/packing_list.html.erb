<h2 style="display:inline">Expedition: </h2><h3 style="display:inline"> <%= @expedition.title  %></h3><br>
<h2 style="display:inline">Duration: </h2><h3 style="display:inline"> <%= @expedition.days  %> days</h3><br>
<h2>Packing List:</h2>

<table class="table table-hover table-bordered table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Weight</th>
      <th>Who's bringing it?</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |inventory_item| %>
      <tr>
        <td><%= inventory_item.title %></td>
        <td><%= inventory_item.description %></td>
        <td><%= inventory_item.weight %></td>
        <% if inventory_item.user.name.nil? %>
        <td><%= inventory_item.user.email %></td>
        <% else %>
        <td><%= inventory_item.user.name %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to  "Add/Remove Items", packer_allocate_path(expedition_id: @expedition.id), method: :get, :class => 'btn btn-lrg btn-default' %>
<%= link_to  "Email Responsibilities", expedition_mailer_path(id: @expedition.id), method: :get, :class => 'btn btn-lrg btn-default', :style => 'display: none;' %>
