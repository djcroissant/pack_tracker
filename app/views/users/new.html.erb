<div class="user form">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title text-center">Sign Up</h3>
      </div>
      <div class="panel-body">
        <%= form_for @user do |f| %>
          <% if @user.errors.any? %>
            <div class="error_messages">
              <ul>
                <% for message in @user.errors.full_messages %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control input-lg' %>
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control input-lg' %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: 'form-control input-lg' %>
          </div>
          <div class="actions">
            <%= f.submit "Submit", class: 'btn-lg btn-success btn-block' %>
          </div>

          <br>
          <div class="actions">
            <%= link_to "Already have an account? Log in!", login_path, :class => 'btn btn-lg btn-default btn-block' %>
          </div>
          
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-3">
  </div>
</div>
