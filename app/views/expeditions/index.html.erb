<h1>Your Expeditions</h1>

<% if @expeditions.empty? %>
  <h2>You're not signed up for any expeditions yet!</h2>
  <p><%= link_to "Create/Join a new Expedition", expedition_create_path %></p>
<% else %>
  <p><%= link_to "Create/Join a new Expedition", join_expedition_path %></p>
  <table class="table table-hover table-bordered table-condensed">
    <thead>
      <tr>
        <th>Title</th>
        <th>Start</th>
        <th>No. Days</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @expeditions.each do |expedition| %>
        <tr>
          <td><%= link_to "#{expedition.title}", packer_allocate_path(exp_id: expedition.id) %></td>
          <td><%= expedition.date %></td>
          <td><%= expedition.days %></td>
          <td><%= link_to 'Delete', expedition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p><%= link_to "Create/Join a new Expedition", join_expedition_path %></p>
<% end %>
