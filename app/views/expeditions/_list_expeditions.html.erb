<table class="table table-hover table-bordered table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Start</th>
      <th>No. Days</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% expeditions.each do |expedition| %>
      <tr>
        <td><%= link_to "#{expedition.title}", packing_list_path(expedition_id: expedition.id) %></td>
        <td><%= expedition.start_date %></td>
        <td><%= expedition.days %></td>
        <td><%= link_to 'details', expedition_details_path(expedition_id: expedition.id) %>
            <%= " / " %>
            <%= link_to 'remove', unjoin_expedition_path(expedition_id: expedition.id), data: { confirm: 'Are you sure you want to leave this expedition?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
