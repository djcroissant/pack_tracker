<h1>Listing Inventory Items</h1>


<table class="table table-hover table-bordered table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Weight</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @inventory_items.each do |inventory_item| %>
      <tr>
        <td><%= inventory_item.title %></td>
        <td><%= inventory_item.description %></td>
        <td><%= inventory_item.weight %></td>
        <td><%= link_to 'Edit', edit_inventory_item_path(inventory_item) %> /
            <%= link_to 'Delete', inventory_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<p><%= link_to '+ New Inventory item', new_inventory_item_path, :class => 'btn btn-lrg btn-default' %></p>
