<div class="session form">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <h1 style="text-align: center"> Welcome to Pack Tracker! </h1><br>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title text-center">Sign In</h3>
      </div>
      <div class="panel-body">
        <%= form_tag :login, html: { class: 'form-hozisontal' } do %>
          <div class="form-group">
            <%= label_tag :email %>
            <%= text_field_tag :email, nil, class: 'form-control input-lg' %>
          </div>
          <div class="form-group">
            <%= label_tag :password %>
            <%= password_field_tag :password, nil, class: 'form-control input-lg' %>
          </div>
          <div class="actions">
            <%= submit_tag "Login", class: 'btn-lg btn-success btn-block' %>
          </div>
          <br>
          <div class="actions">
            <%= submit_tag "Don't have an account? Sign Up!", class: 'btn-lg btn-default btn-block' %>
          </div>
          
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-3">
  </div>
</div>
